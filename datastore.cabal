                       random >= 1.0.0, utf8-string >= 0.3, vty >= 4.2.1
  Other-Modules:       Db,
                       Data.Random.Instances,
                       Data.ByteString.Utils,
                       Data.Rev.Change,
                       Data.Rev.Version,
                       Data.Rev.Branch,
                       Data.Rev.VersionMap,
                       Data.Rev.View,
                       Data.Transaction,
                       Data.IRef,
                       Data.IRef.Tree,
                       Editor.Data,
                       Editor.Anchors
  ghc-options:         -O2 -Wall
  main-is:             Editor/makedb.hs
  ghc-prof-options:    -prof -auto-all

